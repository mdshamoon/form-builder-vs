# Application
APP_NAME="Format Forge Mobile API"
APP_VERSION="0.1.0"
DEBUG=false

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/format_forge_mobile

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
