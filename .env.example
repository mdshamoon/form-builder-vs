# ==============================================
# DEVELOPMENT ENVIRONMENT (.env)
# ==============================================

# Database Configuration
POSTGRES_USER=format_forge
POSTGRES_PASSWORD=format_forge_password
POSTGRES_DB=format_forge_db
DATABASE_URL=postgresql://format_forge:format_forge_password@postgres:5432/format_forge_db

# Backend Configuration
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost
UPLOAD_DIR=/app/uploads

# Frontend Configuration (Development)
VITE_API_BASE_URL=http://localhost:8211

# Optional: Custom ports
BACKEND_PORT=8211
FRONTEND_PORT=5173

# ==============================================
# PRODUCTION ENVIRONMENT (.env.prod)
# ==============================================
# Copy this section to .env.prod for production

# Database Configuration
# POSTGRES_USER=format_forge
# POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
# POSTGRES_DB=format_forge_db
# DATABASE_URL=postgresql://format_forge:STRONG_PASSWORD@postgres:5432/format_forge_db

# Backend Configuration
# SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# UPLOAD_DIR=/app/uploads

# Frontend Configuration (Production)
# Use your server's public URL with backend port
# VITE_API_BASE_URL=https://yourdomain.com:8211
# OR if behind reverse proxy:
# VITE_API_BASE_URL=https://api.yourdomain.com

# Production Ports
# BACKEND_PORT=8211
# FRONTEND_PORT=80
